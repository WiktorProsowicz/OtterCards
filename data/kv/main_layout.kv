#:import c kivy.utils.get_color_from_hex

WindowManager:
    MainScreen:
        CardsScreen:
            TagsCollectionScreen:
                TagWorkshopScreen:
                CardsCollectionScreen:
                    AddCardsScreen
                        AddFromFileScreen:
                            CardWaitingRoomScreen:


<WindowManager>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)

        Rectangle:
            size: self.size
            pos: self.pos

<MenuButton@Button>:
    size_hint: (1, None)
    height: self.width / 4
    background_color: (0, 0, 0, 0)
    font_size: self.height / 3
    color: c("#CCCCCC")
    always_release: True

    on_press: self.opacity -= 0.2
    on_release: self.opacity += 0.2

    canvas.before:


        Color:
            rgba: c("#0e756c")

        Ellipse:
            size: (self.height, self.height)
            angle_start: 180
            angle_end: 0
            pos: (self.x + self.width - self.height, self.y)

        Ellipse:
            size: (self.height, self.height)
            angle_start: 0
            angle_end: -180
            pos: (self.x, self.y)

        Rectangle:
            size: (self.width - self.height, self.height)
            pos: (self.height / 2 + self.x, self.y)

<BackButton@Button>:
    background_color: (0, 0, 0, 0)
    size_hint: (0.15, None)
    height: self.width
    color: c("#CCCCCC")
    always_release: True

    on_press: self.opacity -= 0.2
    on_release: self.opacity += 0.2

    canvas.before:
        Color:
            rgba: c("#0e756c")

        Ellipse:
            angle_start: 0
            angle_end: 360
            size: self.size
            pos: self.pos

    Image:
        source: app.directory + "/data/textures/back_icon.png"
        size: (root.width / 1.5, root.height / 1.5)
        pos: (root.x + root.width / 2 - root.width / 1.5 / 2, root.y + root.height / 2 - root.height / 1.5 / 2)



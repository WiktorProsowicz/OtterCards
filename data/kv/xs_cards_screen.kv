#:import c kivy.utils.get_color_from_hex

<CardsScreen>:

    header: header
    main_layout: main_layout
    title_label: title_label
    back_btn: back_btn

    canvas.before:
        Color:
            rgba: c("#FFFFFF")

        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: c("#1fc1ab")

        Ellipse:
            angle_start: 270
            angle_end: 90
            size: (self.width * 3, self.width)
            pos: (self.width / 2 - self.width * 3 / 2, self.height - self.width / 2.5)

    FloatLayout:
        id: header
        size_hint: (0.9, None)
        height: root.width / 2.7
        pos_hint: {"center_x": 0.5}
        y: root.height - self.height

        BackButton:
            id: back_btn
            size_hint: (None, 0.35)
            width: self.height
            pos_hint: {"x": 0, "center_y": 0.5}
            on_release: app.switch_screen("main_screen", "right")

        Label:
            id: title_label
            size_hint: (None, None)
            height: back_btn.height
            width: header.right - back_btn.right - dp(10)
            pos_hint: {"center_y": 0.5, "right": 1}
            text: "flashcard menu"
            font_size: self.height * 0.6
            text_size: self.size
            color: c("#222222")
            halign: "center"
            valign: "middle"

    FloatLayout:
        id: main_layout
        size_hint: (1, None)
        height: root.height - root.width / 3

        FloatLayout:
            size_hint: (0.7, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MenuButton:
                text: "cards collection"
                pos_hint: {"top": 1, "center_x": 0.5}
                on_release: app.switch_screen("tags_collection_screen", "left")

            MenuButton:
                text: "boxes"
                pos_hint: {"center_y": 0.5, "center_x": 0.5}
                on_release: app.switch_screen("boxes_collection_screen", "left")

            MenuButton:
                text: "database settings"
                pos_hint: {"y": 0, "center_x": 0.5}
                on_release: app.switch_screen("database_settings_screen", "left")

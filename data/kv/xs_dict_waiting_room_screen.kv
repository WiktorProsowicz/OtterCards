#:import c kivy.utils.get_color_from_hex
#:import Scroll kivy.effects.scroll.ScrollEffect
#:import SmartGridLayout data.classes.smart_grid_layout.SmartGridLayout

<DictWaitingRoomScreen>:

    back_btn: back_btn
    title_label: title_label
    approve_btn: approve_btn
    main_layout: main_layout

    cards_slider: cards_slider
    extras_slider: extras_slider
    exceptions_slider: exceptions_slider

    cards_container: cards_container
    extras_container: extras_container
    exceptions_container: exceptions_container

    pages: pages

    canvas.before:
        Color:
            rgba: c("#FFFFFF")

        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: c("#1fc1ab")

        Ellipse:
            angle_start: 270
            angle_end: 90
            size: (self.width * 3, self.width)
            pos: (self.width / 2 - self.width * 3 / 2, self.height - self.width / 4)

    FloatLayout:
        id: header
        size_hint: (None, None)
        size: (root.width * 0.92, root.width * 0.15)
        pos: (root.width * 0.04, root.top - self.height - root.width * 0.04)

        BackButton:
            id: back_btn
            size: (header.height, header.height)
            x: header.x
            top: header.top
            on_release: root.discard()

        Label:
            id: title_label
            size_hint: (0.5, None)
            height: back_btn.height
            text_size: self.size
            y: header.top - self.height
            x: back_btn.right + (- back_btn.right + approve_btn.x) / 2 - self.width / 2
            text: "collected results"
            font_size: header.width * 0.7 * 0.1
            color: c("#222222")
            halign: "center"
            valign: "middle"

        ApproveButton:
            id: approve_btn
            size: (header.height, header.height)
            top: header.top
            x: header.right - self.width
            on_release: root.proceed()

    FloatLayout:
        id: main_layout
        size_hint: (0.95, None)
        height: root.height - root.width / 3.7
        pos_hint: {"center_x": 0.5}
        y: (root.width / 3.7 - root.width / 4) / 2

        PageLayout:
            id: pages
            size: main_layout.size
            pos: main_layout.pos
            swipe_threshold: .2
            border: self.width * 0.1
            on_page: root.hide_utensils()

            FloatLayout:
                size_hint: (1, 1)
                canvas.before:
                    Color:
                        rgba: c("#16e9b8")

                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    color: c("#444444")
                    size_hint: (0.9, None)
                    height: self.width / 15
                    pos_hint: {"center_y": 0.95, "center_x": 0.5}
                    font_size: self.height
                    text: "exceptions"

                ScrollView:
                    id: exceptions_slider
                    size_hint: (0.9, 0.9)
                    pos_hint: {"center_x": 0.5, "y": 0}
                    do_scroll_x: False
                    effect_y: Scroll()

                    SmartGridLayout:
                        id: exceptions_container
                        cols: 1
                        size_hint: (1, None)
                        spacing: dp(15)

            FloatLayout:
                size_hint: (1, 1)
                canvas.before:
                    Color:
                        rgba: c("#5cf0cd")

                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    color: c("#444444")
                    size_hint: (0.9, None)
                    height: self.width / 15
                    pos_hint: {"center_y": 0.95, "center_x": 0.5}
                    font_size: self.height
                    text: "hinted words"

                ScrollView:
                    id: extras_slider
                    size_hint: (0.9, 0.9)
                    pos_hint: {"center_x": 0.5, "y": 0}
                    do_scroll_x: False
                    effect_y: Scroll()

                    SmartGridLayout:
                        id: extras_container
                        cols: 1
                        size_hint: (1, None)
                        spacing: dp(15)

            FloatLayout:
                size_hint: (1, 1)
                canvas.before:
                    Color:
                        rgba: c("#90f5dd")

                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    color: c("#444444")
                    size_hint: (0.9, None)
                    height: self.width / 15
                    pos_hint: {"center_y": 0.95, "center_x": 0.5}
                    font_size: self.height
                    text: "flashcards"

                ScrollView:
                    id: cards_slider
                    size_hint: (0.9, 0.9)
                    pos_hint: {"center_x": 0.5, "y": 0}
                    do_scroll_x: False
                    effect_y: Scroll()

                    SmartGridLayout:
                        id: cards_container
                        cols: 1
                        size_hint: (1, None)
                        spacing: dp(15)

    FloatLayout:
        id: additional_layout
        pos: (back_btn.x, back_btn.top - self.height)

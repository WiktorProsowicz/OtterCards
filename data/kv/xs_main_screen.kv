#:import c kivy.utils.get_color_from_hex

<MainScreen>:
    main_layout: main_layout
    header: header
    title_label: title_label
    icon: icon
    flashcards_btn : flashcards_btn
    revising_btn : revising_btn
    info_help_btn: info_help_btn

    canvas.before:
        Color:
            rgba: c("#1fc1ab")

        Rectangle:
            size: (self.width, self.width / 2)
            pos: (self.x, self.height - self.width / 2)

        Color:
            rgba: c("#FFFFFF")

        Rectangle:
            size: (self.width, self.height - self.width / 2)
            pos: self.pos

        Color:
            rgba: c("#FFFFFF")

        Ellipse:
            angle_start: 0
            angle_end: 360
            size: (self.width * 2, self.width)
            pos: (self.width / 2 - self.width, self.height - self.width / 2 - self.width + self.width * 1/8)


    FloatLayout:
        id: main_layout
        size_hint: (0.7, None)
        height: root.height - root.width / 2
        pos_hint: {"center_x": 0.5}

        FloatLayout:
            size_hint: (1, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}

            MenuButton:
                id: flashcards_btn
                on_release: app.switch_screen("cards_screen", "left")
                text: "flashcards"
                pos_hint: {"center_x": 0.5, "top": 1}

            MenuButton:
                id: revising_btn
                on_release: app.switch_screen("revising_screen", "left")
                text: "revising"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MenuButton:
                id: info_help_btn
                on_release: app.switch_screen("info_help_screen", "left")
                text: "info & help"
                pos_hint: {"center_x": 0.5, "y": 0}

    FloatLayout:
        id: header
        size_hint: (0.95, None)
        height: root.width / 2.5
        pos_hint: {"center_x": 0.5}
        y: root.height - self.height

        FloatLayout:
            size_hint: (1, 0.7)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            canvas.before:

                Color:
                    rgba: c("#0e756c")

                Ellipse:
                    angle_start: 0
                    angle_end: 360
                    size: (self.height * 0.9, self.height * 0.9)
                    pos: (self.x, self.y + self.height * 0.05)

            Label:
                id: title_label
                size_hint: (None, 0.7)
                width: header.width - header.height * 0.9 * 0.7
                pos_hint: {"right": 1, "center_y": 0.5}
                text: "OtterCards"
                font_size: self.height * 0.65
                color: c("#222222")
                halign: "center"

            Image:
                id: icon
                size_hint: (None, 0.68)
                width: self.height
                pos_hint: {"center_y": 0.5}
                x: header.x + self.height / 6.8
                source: app.directory + "/data/textures/logo.png"
